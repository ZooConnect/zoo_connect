{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:hot-reload": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/server.js",
    "dev:frontend": "npx http-server ../frontend -p 4200",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint ."
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.0",
    "mongoose-unique-validator": "^4.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.4",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.5",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "vitest": "^2.0.5"
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "all": true,
      "include": [
        "src/**/*.js"
      ],
      "lines": 80,
      "functions": 80,
      "branches": 70,
      "statements": 80
    }
  }
}